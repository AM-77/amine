---
import PageLayout from "../layouts/PageLayout.astro";

import NavBar from "../components/NavBar.astro";
import PageTitle from "../components/PageTitle.astro";
---

<PageLayout title="AM77 | 404 Not Found">
  <NavBar slot="nav-bar" active="404" />
  <PageTitle slot="page-title" title="404" />

  <div class="flex flex-col h-full w-full p-16 gap-4 items-center">
    <div class="flex flex-col items-center">
      <p class="font-share font-semibold text-primary text-3xl">404</p>
      <p class="font-share font-semibold text-primary text-2xl">
        Page Not Found
      </p>
    </div>
    <span class="text-sm font-ibm font-medium text-gray-50"
      >You are so lost buddy, <a
        href="/"
        title="home page"
        class="text-primary underline">get back home</a
      >.</span
    >
  </div>
</PageLayout>

---
import MainLayout from "./MainLayout.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<style>
  .bg-noisy {
    background: url("/noisy.png");
  }
</style>

<MainLayout {title}>
  <div
    class="bg-noisy flex justify-center bg-repeat w-screen h-screen overflow-hidden p-4"
  >
    <div class="h-full w-12 overflow-hidden shrink-0">
      <slot name="nav-bar" />
    </div>
    <div class="w-full max-w-3xl h-full overflow-auto p-4 relative scrollbar">
      <slot />
    </div>
    <!-- <div class="flex justify-center items-center w-12">
      <div class="origin-center rotate-90">
        <slot name="page-title" />
      </div>
    </div> -->
  </div>
</MainLayout>
